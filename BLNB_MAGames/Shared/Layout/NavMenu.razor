@code {
    private string profile = "";

    protected override void OnInitialized()
    {
        profile = ProfileState.Profile;
        ProfileState.OnProfileChanged += UpdateProfile;
    }

    private void UpdateProfile()
    {
        profile = ProfileState.Profile;
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ProfileState.OnProfileChanged -= UpdateProfile;
    }
}